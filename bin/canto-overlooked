#!/usr/bin/env perl
use strict;
use warnings;

my %studied_word;
my @to_study;

open my $handle, 'new-cards 粵語文 粵語 | wordify-cantonese |' or die $!;
while (<$handle>) {
  push @to_study, [split ' ', $_];
}

open $handle, 'new-cards 粵語文 粵語 1 |  wordify-cantonese |' or die $!;
while (<$handle>) {
  for (split ' ', $_) {
    $studied_word{$_}++;
  }
}

SENTENCE: for my $sentence (@to_study) {
  for my $word (@$sentence) {
    next SENTENCE if !$studied_word{$word};
  }
  print @$sentence, "\n";
}

